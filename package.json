{
  "name": "meridian-esg",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.15.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:jest": "jest",
    "verify": "pnpm run type-check && pnpm run lint && pnpm test run",
    "db:types": "supabase gen types typescript --project-id $SUPABASE_PROJECT_ID > types/database/generated.ts",
    "db:migrate": "supabase db push",
    "db:reset": "supabase db reset",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:reset": "supabase db reset",
    "supabase:types": "supabase gen types typescript --project-id $SUPABASE_PROJECT_ID > types/database/generated.ts",
    "approve-builds": "pnpm config set supportedArchitectures.os 'darwin' 'linux' 'win32' && pnpm config set supportedArchitectures.cpu 'x64' 'arm64'",
    "prepare": "husky || true"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@supabase/ssr": "^0.5.0",
    "@supabase/supabase-js": "^2.45.0",
    "clsx": "^2.1.0",
    "date-fns": "^3.6.0",
    "next": "15.5.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.52.0",
    "tailwind-merge": "^2.5.0",
    "zod": "^3.23.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@next/eslint-plugin-next": "^15.5.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "@vitest/ui": "^1.0.0",
    "dotenv": "^17.2.1",
    "eslint": "^9.33.0",
    "eslint-config-next": "15.5.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.0",
    "jest": "^29.7.0",
    "msw": "^2.3.0",
    "postcss": "^8.5.6",
    "prettier": "^3.3.0",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.0.0",
    "vitest": "^1.0.0"
  }
}